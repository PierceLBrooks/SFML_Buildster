<?xml version="1.0" encoding="UTF-8"?>
<buildster directory="build" distribution="../Distribution" cpp="17" sudo="false">
  <project directory="../Project" cmake_modules="../cmake">
    <dependencies>
      <dependency>
        <label>sfml</label>
        <subpath>build</subpath>
        <remote>
          <url>https://github.com/SFML/SFML.git</url>
          <git_repo>
            <branch>3.0.1</branch>
            <credentials>
              <username>username</username>
              <password>password</password>
            </credentials>
          </git_repo>
        </remote>
        <build>
          <arguments>
            <argument>-DBUILD_SHARED_LIBS=ON</argument>
          </arguments>
          <cmake>
            <generator>
              <switch id="BUILDSTER_OS">
                <case check="Windows">MinGW Makefiles</case>
                <case check="Linux">Unix Makefiles</case>
                <case check="Darwin">Xcode</case>
                <default><quit></quit></default>
              </switch>
            </generator>
            <source>..</source>
            <parallel><cores></cores></parallel>
          </cmake>
        </build>
        <exports>
          <export type="all">
            <key>SFML_PATH</key>
            <value><install></install></value>
          </export>
          <export type="headers">
            <key>SFML_INCLUDE_DIR</key>
            <value><install></install>/include</value>
          </export>
          <export type="libraries">
            <key>SFML_LIBRARIES_DIR</key>
            <value>
              <switch id="BUILDSTER_OS">
                <case check="Windows"><install></install>/bin</case>
                <case check="Linux"><install></install>/lib</case>
                <case check="Darwin"><install></install>/lib</case>
                <default><quit></quit></default>
              </switch>
            </value>
          </export>
        </exports>
        <imports></imports>
      </dependency>
    </dependencies>
    <targets>
      <target type="executable">
        <label>example</label>
        <generator>
          <switch id="BUILDSTER_OS">
            <case check="Windows">CodeBlocks - MinGW Makefiles</case>
            <case check="Linux">CodeBlocks - Unix Makefiles</case>
            <case check="Darwin">Xcode</case>
            <default><quit></quit></default>
          </switch>
        </generator>
        <parallel><cores></cores></parallel>
        <definitions></definitions>
        <if_check id="BUILDSTER_OS" check="Darwin">
          <arguments>
            <!--<if_check id="BUILDSTER_VARIANT" check="Debug">
              <argument>-DCMAKE_XCODE_ATTRIBUTE_CODE_SIGN_STYLE=Automatic</argument>
              <argument>-DCMAKE_XCODE_ATTRIBUTE_CODE_SIGN_IDENTITY="Apple Development"</argument>
              <argument>-DCMAKE_XCODE_ATTRIBUTE_CODE_SIGN_INJECT_BASE_ENTITLEMENTS=YES</argument>
            </if_check>-->
            <argument>-DCMAKE_XCODE_ATTRIBUTE_ONLY_ACTIVE_ARCH=YES</argument>
            <argument>-DCMAKE_XCODE_ATTRIBUTE_CLANG_ENABLE_OBJC_ARC=YES</argument>
            <argument>-DCMAKE_XCODE_ATTRIBUTE_CLANG_ENABLE_OBJC_WEAK=YES</argument>
            <argument>-DCMAKE_XCODE_ATTRIBUTE_ENABLE_HARDENED_RUNTIME=NO</argument>
          </arguments>
        </if_check>
        <links>
          <link>*sfml-graphics*</link>
          <link>*sfml-window*</link>
          <link>*sfml-audio*</link>
          <link>*sfml-network*</link>
          <link>*sfml-system*</link>
          <if_check id="BUILDSTER_OS" check="Windows">
            <link>setupapi</link>
            <link>iphlpapi</link>
            <link>psapi</link>
            <link>userenv</link>
            <link>gdi32</link>
            <link>crypt32</link>
            <link>ws2_32</link>
          </if_check>
        </links>
        <imports>
          <import>sfml</import>
        </imports>
        <if_check id="BUILDSTER_OS" check="Darwin">
          <packages>
            <package>
              <label>QuartzCore</label>
              <exports>
                <export type="headers">
                  <key>QUARTZCORE_INCLUDE_DIR</key>
                  <value></value>
                </export>
                <export type="libraries">
                  <key>QUARTZCORE_LIBRARY</key>
                  <value></value>
                </export>
              </exports>
            </package>
          </packages>
        </if_check>
      </target>
    </targets>
  </project>
</buildster>
